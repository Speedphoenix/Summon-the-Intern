function _init()

	mode = "start"
	sqrt_inv_2 = 1 / sqrt(2)

		player = {
		sp = 1,
		x = 10,
		y = 10,
		h = 8,
		w = 8,
		dx = 0,
		dy = 0,
		acc = 1,
		fric = .1,
		max_d = 1.5,
		spd = 2,
		flipx = false,
		running = false,
		}
		
		
		-- variables anim
		anim_play=0
  anim_spd=2
  fstart=1
  fend=4
		player_frames={1,2,3,4,5,6,7} --idle 1,2,3 run : 1,2,3,4,5 
		
		
end



function _update()

	if mode =="game" then update_game()
	elseif mode == "start" then update_start()
	elseif mode == "end" then update_end() end

end



function _draw()

	if mode =="game" then draw_game()
	elseif mode == "start" then draw_start()
	elseif mode == "end" then draw_end() end

--	print(mode)

end


